<h1>
    개인정보 수정
</h1>
<form action="" method="post">
    <table>
        <tr>
            <td>ID </td>
            <td><input type="text" name="id" autocomplete="off" required placeholder="USER ID" value="<% if(data!=undefined){ %><%= data.rows[0][0] %><% }else{ %><%= input.id %><% } %>" readonly></td>
        </tr>
        <tr>
            <td>현재 비밀번호 </td>
            <td><input type="password" name="pw_before" autocomplete="off" required placeholder="PASSWORD"></td>
            <% if(pw != undefined){ %>
            <td><%= pw %></td>
            <% } %>
        </tr>
        <tr>
            <td>변경할 비밀번호 </td>
            <td><input type="password" name="pw_after" autocomplete="off" required placeholder="CONFIRM PASSWORD"></td>
        </tr>
        <tr>
            <td>닉네임 </td>
            <td><input type="text" name="nickname" autocomplete="off" required placeholder="NICKNAME" value="<% if(data!=undefined){ %><%= data.rows[0][2] %><% }else{ %><%= input.nickname %><% } %>"></td>
            <% if(nickname != undefined){ %>
            <td><%= nickname %></td>
            <% } %>
        </tr>
        <tr>
            <td>이메일 </td>
            <td><input type="email" name="email" autocomplete="off" required placeholder="EMAIL ADDRESS" value="<% if(data!=undefined){ %><%= data.rows[0][3] %><% }else{ %><%= input.email %><% } %>"></td>
    </table>
    <div class="createbtn">
        <button type="submit">수정</button>
    </div>
</form>